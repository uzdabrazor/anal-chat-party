#!/bin/bash

# Simple Docker run script with .env file support
# Usage: ./anal-chat-party [arguments...]
# Examples:
#   ./anal-chat-party update                             # Update Docker image and exit
#   ./anal-chat-party                                    # Chat-only mode
#   ./anal-chat-party --rag-dir ~/docs                  # RAG mode with documents (space-separated)
#   ./anal-chat-party --rag-dir=~/docs                  # RAG mode with documents (equals sign)
#   ./anal-chat-party --listen 0.0.0.0:9000             # Custom listen address/port
#   ./anal-chat-party --rag-dir ~/docs --model llama2   # RAG mode with custom model
#   ./anal-chat-party --model llama2 --rag-dir=~/docs   # Arguments in any order

set -e

# Parse arguments to find --rag-dir  
DOCUMENTS_PATH=""
VOLUME_ARG=""
NEW_ARGS=()

while [[ $# -gt 0 ]]; do
    case $1 in
        update)
            echo "ðŸš€ Updating ANAL CHAT PARTY Docker image..."
            docker pull uzdabrazor/anal-chat-party
            echo "âœ… Update complete!"
            exit 0
            ;;
        --rag-dir=*)
            # Handle --rag-dir=/path/to/dir format
            DOCUMENTS_PATH="${1#*=}"
            if [ -z "$DOCUMENTS_PATH" ]; then
                echo "Error: --rag-dir requires a directory path"
                exit 1
            fi
            # Strip trailing slashes/backslashes
            DOCUMENTS_PATH="${DOCUMENTS_PATH%/}"
            DOCUMENTS_PATH="${DOCUMENTS_PATH%\\}"
            if [ ! -d "$DOCUMENTS_PATH" ]; then
                echo "Error: RAG directory does not exist: $DOCUMENTS_PATH"
                exit 1
            fi
            VOLUME_ARG="-v $DOCUMENTS_PATH:/app/documents"
            NEW_ARGS+=("--rag-dir=/app/documents")
            echo "âœ“ Using documents from: $DOCUMENTS_PATH"
            shift
            ;;
        --rag-dir)
            # Handle --rag-dir /path/to/dir format
            if [ -z "$2" ] || [[ "$2" == --* ]]; then
                echo "Error: --rag-dir requires a directory path"
                exit 1
            fi
            DOCUMENTS_PATH="$2"
            # Strip trailing slashes/backslashes
            DOCUMENTS_PATH="${DOCUMENTS_PATH%/}"
            DOCUMENTS_PATH="${DOCUMENTS_PATH%\\}"
            if [ ! -d "$DOCUMENTS_PATH" ]; then
                echo "Error: RAG directory does not exist: $DOCUMENTS_PATH"
                exit 1
            fi
            VOLUME_ARG="-v $DOCUMENTS_PATH:/app/documents"
            NEW_ARGS+=("--rag-dir" "/app/documents")
            echo "âœ“ Using documents from: $DOCUMENTS_PATH"
            shift 2
            ;;
        *)
            NEW_ARGS+=("$1")
            shift
            ;;
    esac
done

if [ -z "$DOCUMENTS_PATH" ]; then
    echo "âœ“ Running in chat-only mode (no documents)"
fi

ENV_FILE_ARG=""
if [ -f ".env" ]; then
    ENV_FILE_ARG="--env-file .env"
    echo "âœ“ Using .env file"
fi

docker run -it --rm \
    --network host \
    $VOLUME_ARG \
    $ENV_FILE_ARG \
    uzdabrazor/anal-chat-party "${NEW_ARGS[@]}"